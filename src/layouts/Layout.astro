---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/app.scss";
const pageTitle = Astro.props.content?.title
  ? `${Astro.props.content.title} | Parenting Biblically`
  : "Parenting Biblically";
const pageDescription =
  Astro.props.content?.description ||
  "A free course for Christian parents, based on the Bible";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body data-function="<slot name='function' />">
    <!--[if lt IE 8]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="container-fluid">
      <Header />

      <main>
        <slot />
      </main>

      <Footer />
    </div>
    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "mqk0lcueaw");
    </script>
    <slot name="scripts" />
  </body>
</html>
